@model EvedinceFinal.Models.Shift
@{
    ViewData["Title"] = "Ajax Add Or Edit";
     Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Shift_ID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shift_ID" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortCode" class="control-label"></label>
                <input asp-for="ShortCode" class="form-control" />
                <span asp-validation-for="ShortCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Onetime" class="control-label"></label>
                <input asp-for="Onetime" class="form-control" />
                <span asp-validation-for="Onetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OvertimeStart" class="control-label"></label>
                <input asp-for="OvertimeStart" class="form-control" />
                <span asp-validation-for="OvertimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OvertimeEnd" class="control-label"></label>
                <input asp-for="OvertimeEnd" class="form-control" />
                <span asp-validation-for="OvertimeEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftType" class="control-label"></label>
                <input asp-for="ShiftType" class="form-control" />
                <span asp-validation-for="ShiftType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

