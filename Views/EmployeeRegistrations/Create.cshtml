@model EvedinceFinal.ViewModels.VmEmpRegCreate

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>EmployeeRegistration</h4>
<hr />
@using (Html.BeginForm("AddOrEdit", "EmployeeRegistrations", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "SubmitForm" }))
{ 
    @Html.AntiForgeryToken();
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="row">
                <div class="form-group">
                    <div class="input-field col s2">
                        @Html.LabelFor(t => t.Reg_Name)
                    </div>
                    <div class="input-field col s10">
                        @Html.EditorFor(t => t.Reg_Name)
                        @Html.ValidationMessageFor(t => t.Reg_Name, "")
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="form-group">
                    <div class="input-field col s2">
                        @Html.LabelFor(t => t.Gender)
                    </div>
                    <div class="input-field col s10">
                        @Html.EditorFor(t => t.Gender)
                        @Html.ValidationMessageFor(t => t.Gender, "")
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="form-group">
                    <div class="input-field col s2">
                        @Html.LabelFor(t => t.DoB)
                    </div>
                    <div class="input-field col s10">
                        @Html.TextBoxFor(t => t.DoB, "{0:mm/dd/yyyy}", new { @class = "datepicker",type="date" })
                        @Html.ValidationMessageFor(t => t.DoB, "")
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="form-group">
                    <div class="input-field col s2">
                        @Html.LabelFor(t => t.Email)
                    </div>
                    <div class="input-field col s10">
                        @Html.EditorFor(t => t.Email)
                        @Html.ValidationMessageFor(t => t.Email, "")
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(model => model.ImageUrl)
                </div>
                <img src="~/VM_Images/dprofile.png" height="100" width="75" class="change_edit" />
                <input type="file" name="ImageFile" class="form-control changeImage" />
                @Html.ValidationMessageFor(model => model.ImageUrl, "")

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
  </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        $(function () {
            $('.changeImage').change(function () {
                var input = this;
                if (input.files) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('.change_edit').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }

            });
        });
        $(document).ready(function () {
            $('.datepicker').datepicker({
                changeMonth: true,
                changeYear: true,
                showOn: "button",
                buttonText: "Select date"
            });
        });
    </script>
